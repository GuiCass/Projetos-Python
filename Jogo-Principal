import Forca
import Advinhacao

def escolhe_jogo():

    print("*********************************")
    print("*******Escolha o seu jogo!*******")
    print("*********************************")

    print("(1) Forca (2)Advinhação")

    jogo = int(input("Qual jogo?"))

    if(jogo == 1):
        print("Jogando Forca")
        Forca.jogar()
    elif(jogo == 2):
        print("Jogando Advinhação")
        Advinhacao.jogar()
        
if(__name__ == "__main__"):
    escolhe_jogo()
